<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<contentHaul xmlns:a="http://www.appian.com/ae/types/2009">
    <rule>
        <name>CASE_APP_createNewCustomer</name>
        <uuid>0345d6e5-5f06-4f3d-ac96-964aca8dea87</uuid>
        <description>This is the SAIL form for creating a new customer.</description>
        <parentUuid>_a-0000d9c4-bcac-8000-9ba2-011c48011c48_5839</parentUuid>
        <visibility>
            <advertise>false</advertise>
            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>#&quot;SYSTEM_SYSRULES_formLayout&quot;(
  label: &quot;Create New Customer&quot;,
  firstColumnContents: #&quot;d3b95f27-f45a-4d97-812f-ef8de3681197&quot;(
    customerData: ri!customerData,
    logo: ri!logo,
    isCreate: true,
    isShippingBillingSame: ri!isShippingBillingSame
  ),
  buttons: #&quot;SYSTEM_SYSRULES_ButtonLayout&quot;(
    primaryButtons: {
      #&quot;SYSTEM_SYSRULES_ButtonWidgetSubmit&quot;(
        label: &quot;Submit&quot;,
        style: &quot;PRIMARY&quot;,
        value: &quot;submit&quot;,
        saveInto: {
          ri!button,
          a!save(
            ri!customerData.InactiveFlag,
            false
          ),
          a!save(
            ri!customerData.CustomerSince,
            todate(
              now()
            )
          )
        }
      )
    },
    secondaryButtons: {
      #&quot;SYSTEM_SYSRULES_ButtonWidgetSubmit&quot;(
        label: &quot;Cancel&quot;,
        value: true,
        saveInto: ri!button,
        skipValidation: true
      )
    }
  )
)</definition>
        <namedTypedValue>
            <name>customerData</name>
            <type>
                <name>Variant</name>
                <namespace>http://www.appian.com/ae/types/2009</namespace>
            </type>
        </namedTypedValue>
        <namedTypedValue>
            <name>logo</name>
            <type>
                <name>CollaborationDocument</name>
                <namespace>http://www.appian.com/ae/types/2009</namespace>
            </type>
        </namedTypedValue>
        <namedTypedValue>
            <name>button</name>
            <type>
                <name>string</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
            <value/>
        </namedTypedValue>
        <namedTypedValue>
            <name>isShippingBillingSame</name>
            <type>
                <name>boolean</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
        </namedTypedValue>
        <preferredEditor>interface</preferredEditor>
        <offlineEnabled>false</offlineEnabled>
    </rule>
    <roleMap public="true">
